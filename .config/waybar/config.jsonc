// -*- mode: jsonc -*-
{
    "layer": "top",
    "height": 40,
    "spacing": 8,

    "modules-left": [
        "hyprland/workspaces",

        "custom/separator",

        "temperature",
        "cpu",
        "memory",

        "custom/separator",

        "tray"
    ],

    "modules-center": [
        "hyprland/window"
    ],

    "modules-right": [
        "hyprland/language",
        "power-profiles-daemon",

        "custom/separator",

        "backlight",
        "wireplumber",
        "network",
        "battery",
        // "battery#bat2",
        "clock",

        "custom/separator",

        "custom/power"
    ],

    // Modules configuration
    // 
    // "",
    // "",
    // "",
    // "",
    // "",
    // "",
    // "",
    // ""
    //
    //////////////////////////////

    // Decoration

    "custom/separator": {
        "exec": "echo \"│\"",
        "format": "{}"
    },


    // Left

    "hyprland/workspaces": {
        "format": "{icon}",
        "separate-outputs": false,
        "active-only": false,
        "all-outputs": false,
        "format-icons": {
            "1": "",
            "2": "",
            "3": "",
            "4": "4",
            "5": "5",
                "6": "6",
            "7": "7",
            "8": "8",
            "9": "9"
        }
    },

    "temperature": {
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""],
        "tooltip": false
    },

    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },

    "memory": {
        "format": "{}% "
    },

    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },


    // Mid

    "hyprland/window": {
        "max-length": 50,
        "rewrite": {
            "(.*) — Mozilla Firefox": "  $1",
            "ghostty": "  ghostty",
            "(.*) - Code - OSS": "  $1"
        }
    },

    
    // Right
    
    "hyprland/language": {
        "format-en": "en",
        "format-ka": "ge"
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "",
            "performance": "",
            "balanced": "",
            "power-saver": ""
        }
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },

    "wireplumber": {
        "format": "{volume}%  {icon}",
        "format-muted": "",
        "on-click": "pwvucontrol",
        "format-icons": ["", "", ""],
        "max-volume": 100.0
    },

    "network": {
        "format-wifi": "",
        "format-ethernet": "",
        "format-linked": "",
        "format-disconnected": "⚠",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip": true,
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format-disconnected": "Disconnected ⚠",
        "tooltip-format-linked": "{ifname} (No IP) "
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },

    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "custom/power": {
        "format" : "⏻ ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
        "menu-actions": {
            "shutdown": "shutdown",
            "reboot": "reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },


    // Other

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "default": "🎜"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    }
}